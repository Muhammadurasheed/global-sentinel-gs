# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Google Cloud Configuration (for Gemini AI)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Elastic Cloud Configuration (for Hybrid Search with ELSER)
# Option 1: Use Cloud ID (recommended)
ELASTIC_CLOUD_ID=your-elastic-cloud-id
ELASTIC_API_KEY=your-elastic-api-key

# Option 2: Use direct node URL
ELASTIC_NODE_URL=https://your-deployment.es.io:443
ELASTIC_API_KEY=your-elastic-api-key

# Server Configuration
PORT=5000
NODE_ENV=development
